<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ChatBox" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_empty_body_stroke_chat</item>
    </style>

    <!-- no title bar -->
    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- no title bar & full screen -->
    <style name="AppTheme.NoTitleBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
